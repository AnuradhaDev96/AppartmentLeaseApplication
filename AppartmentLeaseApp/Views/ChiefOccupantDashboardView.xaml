<UserControl x:Class="AppartmentLeaseApp.Views.ChiefOccupantDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppartmentLeaseApp.Views"
             mc:Ignorable="d" Background="Honeydew"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top" FontSize="18">
            <MenuItem Header="_Account">
                <MenuItem x:Name="LogOut" Header="_Log out" />
            </MenuItem>
            <MenuItem Header="_Lease Agreements">
                <MenuItem x:Name="MyLeaseAgreementsPage" Header="_My Lease Agreements" />
            </MenuItem>
        </Menu>
        <Grid>
            <ContentControl x:Name="ActiveItem" Margin="0 5 0 20"/>
        </Grid>
    </DockPanel>
</UserControl>
